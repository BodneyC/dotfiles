[colors]
clear = #00FFFFFF
grey = #ffc4c4c4
bar-bg = #440f4214
bar-fg = #ffb52a
active-text = #42f59b
occupied-text = #23a630
urgent-text = #ed7824
standard-text = #d8f5b8
icon = #addb6b

[bar/top-bar]
monitor = eDP1
override-redirect = true
enable-ipc = true
wm-restack = bspwm

height = 30
background = ${colors.bar-bg}
foreground = ${colors.bar-fg}
font-0 = Droid Sans Mono for Powerline:style=regular:pixelsize=23;2
font-1 = Font Awesome 5 Free:style=Solid:pixelsize=17;0
font-2 = Font Awesome 5 Free:style=Regular:pixelsize=17;0
font-3 = Siji:style=Regular:scale=100;0
separator = |
border-size = 7
padding-left = 1
padding-right = 3
module-margin-left = 1
module-margin-right = 1

modules-left = bspwm
modules-center = date
modules-right = data-open pulseaudio wlan

[bar/data-bar]
monitor = ${bar/top-bar.monitor}
override-redirect = ${bar/top-bar.override-redirect}
enable-ipc = ${bar/top-bar.enable-ipc}
wm-restack = ${bar/top-bar.wm-restack}

height = ${bar/top-bar.height}
background = ${bar/top-bar.background}
foreground = ${bar/top-bar.foreground}
font-0 = ${bar/top-bar.font-0}
font-1 = ${bar/top-bar.font-1}
font-2 = ${bar/top-bar.font-2}
font-3 = ${bar/top-bar.font-3}
separator = ${bar/top-bar.separator}
border-size = ${bar/top-bar.border-size}
padding-left = ${bar/top-bar.padding-left}
padding-right = ${bar/top-bar.padding-right}
module-margin-left = ${bar/top-bar.module-margin-left}
module-margin-right = ${bar/top-bar.module-margin-right}

modules-left = bspwm
modules-right = data-close temps pacman-updates memory cpu battery pulseaudio wlan-ip

[module/temps]
type = internal/temperature
interval = 0.5
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp1_input
warn-tempurature = 60
ramp-0 = 
ramp-1 = 
ramp-2 = 
format = <ramp> <label>
format-foreground = ${colors.icon}
label = %temperature-c%
label-foreground = ${colors.standard-text}
label-warn = %temperature-c%
label-warn-foreground = ${colors.urgent-text}

[module/pacman-updates]
type = custom/script
exec = pacman -Qu | wc -l
interval = 1000
label = %output%
label-foreground = ${colors.standard-text}
format =  <label>
format-foreground = ${colors.icon}

[module/data-open]
type = custom/script
exec = echo "o"
click-left = "$HOME/.config/polybar/switch-bars.sh"

[module/data-close]
type = custom/script
exec = echo "x"
click-left = "$HOME/.config/polybar/switch-bars.sh"

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
label-monitor = %name%
pin-workspaces = true
enable-click = true
enable-scroll = true
reverse-scroll = true

label-focused = %name%
label-focused-padding = 1
label-focused-foreground = ${colors.active-text}

label-occupied = %name%
label-occupied-padding = 1
label-occupied-foreground = ${colors.occupied-text}

label-urgent = %name%ed7824
label-urgent-padding = 1
label-urgent-foreground = ${colors.urgent-text}

label-empty = %name%
label-empty-padding = 1
label-empty-foreground = ${colors.standard-text}

label-separator = |
label-separator-padding = 0
label-separator-foreground = ${colors.bar-fg}

[module/wlan-ip]
type = internal/network
interface = wlp59s0
interval = 3

label-connected = %essid% - %local_ip% %downspeed:9%
label-connected-foreground = ${colors.standard-text}
format-connected =  <label-connected>
format-connected-foreground = ${colors.icon}

label-disconnected = None
label-disconnected-foreground = ${colors.urgent-text}
format-disconnected =  <label-disconnected>
format-disconnected-foreground = ${colors.icon}

[module/wlan]
type = internal/network
interface = wlp59s0
interval = 3

label-connected = %essid%
label-connected-foreground = ${colors.standard-text}
format-connected =  <label-connected>
format-connected-foreground = ${colors.icon}

label-disconnected = None
label-disconnected-foreground = ${colors.urgent-text}
format-disconnected =  <label-disconnected>
format-disconnected-foreground = ${colors.icon}

[module/cpu]
type = internal/cpu
interval = 0.8

label = %percentage%%
label-foreground = ${colors.standard-text}
format =  <label>
format-foreground = ${colors.icon}

[module/memory]
type = internal/memory
interval = 2

label = %gb_used%
label-foreground = ${colors.standard-text}
format =  <label>
format-foreground = ${colors.icon}

[module/date]
type = internal/date
interval = 3
date = %b %d
time = %H:%M

label = %date%, %time%
label-foreground = ${colors.standard-text}
format =  <label> 
format-foreground = ${colors.icon}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 99
poll-interval = 2

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 
ramp-capacity-10 = 
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-5 = 
animation-charging-6 = 
animation-charging-framerate = 250

label-charging = %percentage%%
label-charging-foreground = ${colors.standard-text}
format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.icon}

label-discharging = %percentage%%
label-discharging-foreground = ${colors.standard-text}
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${colors.icon}

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = 100
interval = 5

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

format-muted = 
format-muted-foreground = ${colors.urgent-text}

format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.icon}
label-volume = %percentage%%
label-volume-foreground = ${colors.standard-text}

[settings]
screenchange-reload = false

[global/wm]
margin-top = 0
