[global]
    corner_radius = 15
    font = VictorMono Nerd Font 15
    allow_markup = yes
    format = "<b>%a:</b> %s\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "550x5-12+12"
    transparency = 20
    idle_threshold = 120
    monitor = 0
    follow = none
    sticky_history = yes
    line_height = 0
    separator_height = 1
    padding = 8
    horizontal_padding = 20
    separator_color = frame
    startup_notification = true
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab

[frame]
    width = 20
    color = "#2a2a2a"

[shortcuts]
    close = mod4+m
    close_all = mod4+shift+m
    history = mod4+n
    context = mod4+shift+i

[urgency_low]
    background = "#031d0a"
    foreground = "#bbd1c0"
    timeout = 10

[urgency_normal]
    background = "#0f3c44"
    foreground = "#b0b4c1"
    timeout = 10

[urgency_critical]
    background = "#721414"
    foreground = "#b0b4c1"
    timeout = 0

[signed_on]
    appname = Pidgin
    summary = "*signed on*"
    urgency = low

[signed_off]
    appname = Pidgin
    summary = *signed off*
    urgency = low

[says]
    appname = Pidgin
    summary = *says*
    urgency = critical
    format  = "%s "%b""

[music]
    appname = Amarok
    summary = "Now playing"
    urgency = low

